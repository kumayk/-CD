
<div class="container">
	<div class="row">
        <h2 style="text-align: center; margin-bottom: 30px;">登録商品一覧</h2>
		<div class="col-md-2 col-xs-2"></div>
        <table style="border-collapse: collapse; border-spacing: 0; width: 90%; text-align: center;">
            <thead>
                <th></th>
                <th style="text-align: center;">ジャケット画像</th>
                <th style="text-align: center;">シングル/アルバム名</th>
                <th style="text-align: center;">アーティスト名</th>
                <th style="text-align: center;">販売状態/在庫</th>
            </thead>
    	    <% @items.each do |item| %>
                <tbody>
                    <tr class="row cart_item" style="margin-bottom: 20px; border-top: solid 3px #eee; cursor: pointer;" >
                        <td class="item_img col-md-4">
            	            <%= link_to admin_item_path(item.id) do %>
                                <%= attachment_image_tag item, :image, :fill, 150, 150, fallback: "no_img.png", size:'150x150' %>
                            <% end %>
                        </td>
                        <div class="item_info col-md-4 col-xs-6">
                            <td>
                                <h3><%= item.disk_name %></h3>
                            </td>
                            <td>
                                <h3><%= item.artist.artist_name %></h3>
                            </td>
                            <td>
                                <h3><%= item.item_status %>/<%= item.stock%></h3>
                            </td>
                        </div>
                    </tr>
                </tbody>
            <% end %>
        </table>
    </div>
    <div class="col-md-2 col-xs-2"></div>
</div>
<div class="container">
	<div class="row">
		<div class="col-md-4 col-xs-4"></div>
		<div class="col-md-4 col-xs-4"></div>
        <div class="col-md-4 col-xs-4"></div>
    </div>
</div>