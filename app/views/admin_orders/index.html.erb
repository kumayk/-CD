<div class="container">
	<div class="row">
		<h4>注文履歴一覧</h4>

			<% if @orders.present? %>
				<table class="table" style="width: 100%;">

				  <thead>
				    <tr>
				      <th scope="col">#</th>
				      <th scope="col">購入者</th>
				      <th scope="col">合計金額</th>
				      <th scope="col">購入日付</th>
				      <th scope="col">発送状況</th>
				      <th scope="col">注文詳細</th>
				    </tr>
				  </thead>

				  <tbody>
				    <% @orders.each do |od| %>
				    	<% user = User.with_deleted.find(od.user_id) %>
					    <tr>
					      <th scope="row"><%= od.id %></th>
					      <td><%= user.last_name %><%= user.first_name %></td>
					      <td><%= od.total_price %></td>
					      <td><%= od.created_at %></td>
					      <td><%= od.order_status %></td>
					      <td><%= link_to "詳細", admin_order_path(od.id) %></td>
					    </tr> 
		 		    <% end %>


				  </tbody>

				</table>

			<% end %>


	</div>
</div>